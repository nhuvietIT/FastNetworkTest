    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <sega.fastnetwork.test.view.RobotoRegularTextView
                android:id="@+id/product_name_compact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                tools:text="My Awesome product Title"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/price_compact"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:text="Price" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:text="đ"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="  cho"/>

                <TextView
                    android:id="@+id/product_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:text=" 1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text=" giờ"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="50">

                <sega.fastnetwork.test.view.RobotoLightTextView
                    android:id="@+id/timepost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/text_small"
                    tools:text="2016" />
                <sega.fastnetwork.test.view.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_small"
                    android:text="   |" />
                <sega.fastnetwork.test.view.RobotoLightTextView
                    android:id="@+id/area_compact"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_small"
                    tools:text="Area" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="50"
                    android:gravity="right">
                    <sega.fastnetwork.test.view.RobotoLightTextView
                        android:id="@+id/userpost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginRight="10dp"
                        tools:text="Sieu Gò Vấp"
                        android:textSize="@dimen/text_small"/>
                    <ImageView
                        android:id="@+id/product_poster_compact"
                        android:layout_width="13dp"
                        android:layout_height="13dp"

                        android:src="@drawable/cate_home"
                        android:layout_gravity="center_horizontal"

                        />


                </LinearLayout>

            </LinearLayout>

