<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_changepassword"
    android:orientation="vertical"
    tools:context="sega.fastnetwork.test.activity.ChangePasswordActivity">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutoldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <android.support.design.widget.TextInputEditText

            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/lock"
            android:ems="10"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/btn_color_login"
            android:textColorLink="@color/btn_color_login"
            android:textSize="15sp"

            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutnewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <android.support.design.widget.TextInputEditText

            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/lock"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/btn_color_login"
            android:textColorLink="@color/btn_color_login"
            android:textSize="15sp"

            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutcofirmnewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <android.support.design.widget.TextInputEditText

            android:id="@+id/confirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/lock"
            android:ems="10"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/btn_color_login"
            android:textColorLink="@color/btn_color_login"
            android:textSize="15sp"

            />
    </android.support.design.widget.TextInputLayout>
    <FrameLayout
        android:id="@+id/layout_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dist_large"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginRight="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_above="@+id/btn_backtologin"
        android:layout_centerHorizontal="true">

    <ProgressBar
        android:id="@+id/progressBar_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_large"
        android:background="@drawable/roundbutton"
        android:text="Change"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    </FrameLayout>


</LinearLayout>
